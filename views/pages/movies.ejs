<div class="card bg-body-secondary">
  <div class="card-body">
    <h4 class="card-title">Movies</h4>
    <table class="table table-hover align-middle border">
      <thead>
        <tr class="">
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Rating</th>
          <th class="text-end" scope="col">
            <a class="btn btn-primary" href="/movies/add">
              <i class="bi bi-plus"></i>
              <span>Add Movie</span>
            </a>
          </th>
        </tr>
      </thead>
      <tbody>
        <% movies.forEach(({ _id, title, rating }, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= title %></td>
          <td>
            <% for (let i = 1; i <= 5; i++) { if (rating >= i) { %>
            <i class="bi bi-star-fill"></i>
            <% } else { %>
            <i class="bi bi-star"></i>
            <% } } %>
          </td>
          <td class="text-end">
            <div class="btn-group">
              <a class="btn btn-secondary" href="/movies/view/<%= _id %>">
                <i class="bi bi-eye"></i>
              </a>
              <a class="btn btn-primary" href="/movies/edit/<%= _id %>">
                <i class="bi bi-pen"></i>
              </a>
              <a class="btn btn-danger" href="/movies/delete/<%= _id %>">
                <i class="bi bi-trash"></i>
              </a>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
