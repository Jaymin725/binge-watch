<div class="card bg-body-secondary">
  <div class="card-body">
    <form action="/catagories/edit" method="post">
      <h4 class="card-title">Edit Catagory</h4>
      <!-- Id -->
      <input type="hidden" name="id" value="<%= catagory._id %>" />
      <!-- Name -->
      <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= catagory.name %>"
            required
          />
        </div>
      </div>
      <!-- Submit -->
      <button type="submit" class="btn btn-secondary">Edit Catagory</button>
    </form>
  </div>
</div>
